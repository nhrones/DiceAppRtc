    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run App Server",
            "type": "shell",
            "command": "deno",
            "options": {
                "cwd": "../RtcDiceAppServer",
                "env": {
                    "DEBUG": "true", 
                    "DENO_REGION" : "localhost"
                },
            },
            "args": [
                "run",
                "--watch",
                "--unstable",
                "--allow-env", 
                "--allow-read",
                "--allow-net", 
                "server.ts"
